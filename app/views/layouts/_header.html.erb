<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <%= link_to "Game!", root_url, { class: "navbar-brand", id: "logo" } %>

    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
            <% if current_user %>
                <li class="nav-item">
                    <%= link_to "Home", root_url, class: "nav-link" %>
                </li>
            <% end %>
        </ul>
        <% if !current_user %>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <% if controller_name != 'sessions' %>
                        <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
                    <% end %>
                </li>
                <li class="nav-item">
                    <% if devise_mapping.registerable? && controller_name != 'registrations' %>
                        <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
                    <% end %>
                </li>
                <li class="nav-item">
                    <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                        <%= link_to "Forgot your password?", new_user_password_path, class: "nav-link" %>
                    <% end %>
                </li>
            </ul>
        <% elsif %>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <%= link_to "Account", edit_user_registration_url, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "Log out", destroy_user_session_url, method: :delete, class: "nav-link" %>
                </li>
            </ul>
        <% end %>
    </div>
</nav>