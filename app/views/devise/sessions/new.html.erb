<div class="container">
  <h2 class="row">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <%= f.label :email, class: "col-sm-10 col-form-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-sm-10 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group row">
        <div class="col-sm-10">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "col-sm-8 col-form-label" %>
        </div>
      </div>
    <% end %>

    <%= f.submit "Log in" %>
  <% end %>
</div>
